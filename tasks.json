{
	"version": "2.0.0",
	"tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "g++.exe",
            "args": [
                "-g",
                "-std=c++17",
                "-I{Path to the include folder}",
                "-L{Path to the lib folder}",
                "${workspaceFolder}\\src\\*.cpp",
                "{Path to}\\glad.c",
                "-lglfw3dll",
                "-o",
                "${workspaceFolder}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: g++.exe"
        }
    ]
}
